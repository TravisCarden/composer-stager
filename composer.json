{
    "name": "php-tuf/composer-stager",
    "type": "library",
    "description": "Stages Composer commands so they can be safely run on a production codebase.",
    "homepage": "https://github.com/php-tuf/composer-stager",
    "readme": "docs/README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Travis Carden",
            "email": "travis.carden@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "symfony/config": "^4.4 || ^5.2",
        "symfony/console": "^4.4 || ^5.2",
        "symfony/dependency-injection": "^4.4 || ^5.2",
        "symfony/filesystem": "^4.4 || ^5.2",
        "symfony/finder": "^4.4 || ^5.2",
        "symfony/process": "^4.4 || ^5.2",
        "symfony/yaml": "^4.4 || ^5.2"
    },
    "require-dev": {
        "ext-json": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "pepakriz/phpstan-exception-rules": "^0.11.6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-tuf/phpcodesniffer-standard": "dev-main",
        "phpmd/phpmd": "^2.10",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.83",
        "phpstan/phpstan-deprecation-rules": "^0.12.6",
        "phpstan/phpstan-strict-rules": "^0.12.9",
        "phpstan/phpstan-symfony": "^0.12.37",
        "phpunit/phpunit": "^9.5",
        "psalm/phar": "^4.8",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "roave/security-advisories": "Ensures that your application doesn't have installed dependencies with known security vulnerabilities."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "_comment": [
                "This is specified as a package rather than an ordinary VCS due to failures to clone the repo on CI.",
                "@todo Remove altogether once the package is published to Packagist."
            ],
            "type": "package",
            "package": {
                "name": "php-tuf/phpcodesniffer-standard",
                "version": "dev-main",
                "dist": {
                    "url": "https://github.com/php-tuf/phpcodesniffer-standard/archive/refs/heads/main.zip",
                    "type": "zip"
                },
                "type": "phpcodesniffer-standard",
                "require": {
                    "slevomat/coding-standard": "^7.0",
                    "squizlabs/php_codesniffer": "^3.5"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/composer-stage"
    ],
    "scripts": {
        "all": [
            "@lint",
            "@composer validate --strict",
            "@phpcs",
            "@phpstan",
            "@phpmd",
            "@psalm",
            "@coverage",
            "@security"
        ],
        "coverage": "phpunit --coverage-html $(pwd)/var/phpunit/coverage-report --coverage-text --color=always | grep --invert-match --extended-regexp '(^PhpTuf\\.*\\\\|Methods)'",
        "lint": "parallel-lint --no-progress bin/composer-stage src tests",
        "open-coverage": "open $(pwd)/var/phpunit/coverage-report/index.html || echo 'Run the \"coverage\" command to generate the coverage report.'",
        "phpcbf": "phpcbf --standard=PhpTuf ./src ./tests",
        "phpcs": "phpcs -s --standard=PhpTuf ./src ./tests",
        "phpmd": "phpmd src text phpmd",
        "phpstan": "phpstan analyse",
        "psalm": "psalm.phar",
        "security": "@composer update --dry-run roave/security-advisories",
        "static": [
            "@lint",
            "@composer validate --strict",
            "@phpcs",
            "@phpstan",
            "@phpmd",
            "@psalm"
        ],
        "test": "phpunit --coverage-html var/phpunit/coverage-report"
    },
    "scripts-descriptions": {
        "all": "Runs all automated tests and static analysis tools.",
        "coverage": "Runs PHPUnit tests with code coverage.",
        "lint": "Lints PHP files.",
        "open-coverage": "Opens the code coverage report generated by the \"coverage\" script (on macOS).",
        "phpcbf": "Automatically fixes standards violations where possible.",
        "phpcs": "Checks code for standards compliance.",
        "phpmd": "Looks for potential problems within the source code.",
        "phpstan": "Analyzes code to find bugs.",
        "psalm": "Analyzes PHP application for errors.",
        "security": "Checks installed dependencies for known security vulnerabilities.",
        "static": "Runs all static analysis tools.",
        "test": "Runs automated tests."
    },
    "support": {
        "issues": "https://github.com/php-tuf/composer-stager/issues",
        "source": "https://github.com/php-tuf/composer-stager"
    }
}
