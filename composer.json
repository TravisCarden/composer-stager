{
    "name": "php-tuf/composer-stager",
    "type": "library",
    "description": "Stages Composer commands so they can be safely run on a production codebase.",
    "homepage": "https://github.com/php-tuf/composer-stager",
    "readme": "docs/README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Travis Carden",
            "email": "travis.carden@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "symfony/config": "^4.4 || ^5.2",
        "symfony/console": "^4.4 || ^5.2",
        "symfony/dependency-injection": "^4.4 || ^5.2",
        "symfony/yaml": "^4.4 || ^5.2"
    },
    "require-dev": {
        "ext-json": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "php-tuf/phpcodesniffer-standard": "dev-main",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/php-tuf/phpcodesniffer-standard"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/composer-stage"
    ],
    "scripts": {
        "coverage": "phpunit --coverage-html var/phpunit.cache/coverage-report; open var/phpunit.cache/coverage-report/index.html",
        "lint": "find src tests -name '*.php' -print0 | xargs -0 -n1 php -l",
        "phpcbf": "phpcbf --standard=PhpTuf ./src ./tests",
        "phpcs": "phpcs -s --standard=PhpTuf ./src ./tests",
        "phpunit": "phpunit --coverage-clover /tmp/clover.xml # Enable coverage to test annotations",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit"
        ]
    },
    "scripts-descriptions": {
        "phpcbf": "Automatically fixes standards violations where possible.",
        "phpcs": "Checks code for standards compliance.",
        "test": "Runs automated tests."
    },
    "support": {
        "issues": "https://github.com/php-tuf/composer-stager/issues",
        "source": "https://github.com/php-tuf/composer-stager"
    }
}
