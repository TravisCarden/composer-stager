{
    "name": "php-tuf/composer-stager",
    "type": "library",
    "description": "Stages Composer commands so they can be safely run on a production codebase.",
    "homepage": "https://github.com/php-tuf/composer-stager",
    "readme": "docs/README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Travis Carden",
            "email": "travis.carden@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "symfony/config": "^4.4 || ^5.2",
        "symfony/console": "^4.4 || ^5.2",
        "symfony/dependency-injection": "^4.4 || ^5.2",
        "symfony/process": "^4.4 || ^5.2",
        "symfony/yaml": "^4.4 || ^5.2"
    },
    "require-dev": {
        "ext-json": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "pepakriz/phpstan-exception-rules": "^0.11.6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-tuf/phpcodesniffer-standard": "dev-main",
        "phpmd/phpmd": "^2.10",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.83",
        "phpstan/phpstan-deprecation-rules": "^0.12.6",
        "phpstan/phpstan-strict-rules": "^0.12.9",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "roave/security-advisories": "Ensures that your application doesn't have installed dependencies with known security vulnerabilities."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "_comment": [
                "This is specified as a package rather than an ordinary vcs due to failures on to clone the repo on CI.",
                "@todo To be removed altogether once the package is published to Packagist."
            ],
            "type": "package",
            "package": {
                "name": "php-tuf/phpcodesniffer-standard",
                "version": "dev-main",
                "dist": {
                    "url": "https://github.com/php-tuf/phpcodesniffer-standard/archive/refs/heads/main.zip",
                    "type": "zip"
                },
                "type": "phpcodesniffer-standard",
                "require": {
                    "slevomat/coding-standard": "^7.0",
                    "squizlabs/php_codesniffer": "^3.5"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/composer-stage"
    ],
    "scripts": {
        "c": "rm -rf var/phpcs-cache.json var/phpstan var/phpunit.cache",
        "coverage": [
            "phpunit --coverage-html var/phpunit.cache/coverage-report",
            "open var/phpunit.cache/coverage-report/index.html"
        ],
        "install-phpdoc": "php -r \"copy('https://phpdoc.org/phpDocumentor.phar', 'vendor/bin/phpdoc.phar');\"",
        "lint": "parallel-lint --no-progress bin/composer-stage src tests",
        "phpcbf": "phpcbf --standard=PhpTuf ./src ./tests",
        "phpcs": "phpcs -s --standard=PhpTuf ./src ./tests",
        "phpmd": "phpmd src text phpmd",
        "phpdoc": [
            "php vendor/bin/phpdoc.phar run --target=var/phpdoc/build --cache-folder=var/phpdoc/cache --directory=src/Domain,src/Exception,src/Infrastructure --title='Composer Stager'",
            "open var/phpdoc/build/index.html"
        ],
        "phpstan": "phpstan analyse",
        "phpunit": "phpunit --coverage-clover /tmp/clover.xml",
        "security": "@composer update --dry-run roave/security-advisories",
        "test": [
            "@lint",
            "@phpcs",
            "@phpstan",
            "@phpmd",
            "@phpunit",
            "@security"
        ]
    },
    "scripts-descriptions": {
        "c": "Clears tool caches, e.g., PHPCS, PHPStan, and PHPUnit.",
        "coverage": "Runs PHPUnit with test coverage and opens a report in the browser (on macOS).",
        "lint": "Lints PHP files.",
        "phpcbf": "Automatically fixes standards violations where possible.",
        "phpcs": "Checks code for standards compliance.",
        "phpdoc": "Generates and open code documentation and opens it in the browser (on macOS).",
        "phpmd": "Looks for potential problems within the source code.",
        "phpstan": "Analyzes code to find bugs.",
        "phpunit": "Runs PHPUnit tests.",
        "security": "Checks installed dependencies for known security vulnerabilities.",
        "test": "Runs all automated tests and static analysis."
    },
    "support": {
        "issues": "https://github.com/php-tuf/composer-stager/issues",
        "source": "https://github.com/php-tuf/composer-stager"
    }
}
